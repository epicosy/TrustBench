{
  "BM": {
    "format": "csv",
    "collect": {
      "source": "kaggle",
      "kwargs": {
        "owner": "sharanmk",
        "dataset_name": "bank-marketing-term-deposit"
      }
    },
    "preprocess": {
      "labels_col": "y",
      "options": {
        "binarize": true,
        "balance": true,
        "encode": {
          "month": {
            "jan": 1,
            "feb": 2,
            "mar": 3,
            "apr": 4,
            "may": 5,
            "jun": 6,
            "jul": 7,
            "aug": 8,
            "sep": 9,
            "oct": 10,
            "nov": 11,
            "dec": 12
          },
          "education": {
            "unknown": 0,
            "primary": 1,
            "secondary": 2,
            "tertiary": 3
          },
          "poutcome": {
            "unknown": 0,
            "failure": 1,
            "other": 2,
            "success": 3
          }
        },
        "drop": [
            "job_admin",
            "marital_divorced",
            "default_no",
            "housing_no",
            "loan_no",
            "contact_cellular"
        ]
      }
    }
  }
}